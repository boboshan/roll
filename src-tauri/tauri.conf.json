{
	"productName": "Roll",
	"version": "0.0.0",
	"identifier": "com.boboshan",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "Roll",
				"width": 1200,
				"height": 800,
				"minWidth": 800,
				"minHeight": 500,
				"decorations": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"externalBin": ["binaries/ffmpeg"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"windows": {
			"nsis": {
				"installerIcon": "icons/icon.ico",
				"installMode": "perMachine",
				"startMenuFolder": "WowHowBow"
			}
		}
	}
}
